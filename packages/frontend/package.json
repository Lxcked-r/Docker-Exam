{
  "name": "bowy",
  "author": "Lxcked",
  "description": "A live chat application with a focus on privacy and security.",
  "version": "0.1.30",
  "private": true,
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "dev-host": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "electron": "electron .",
    "electron:build": "npm run build && electron-builder"
  },
  
  "build": {
    "asar": false,
    "appId": "ch.lxcked.bowy",
    "productName": "Bowy",
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "icon": "imgs/fav.ico",
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "imgs/fav.ico",
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "dekcxl",
        "repo": "bowy-releases"
      }
    ]
  },
  "publish": [
    {
      "provider": "github",
      "owner": "dekcxl",
      "repo": "bowy-releases"
    }
  ],
  "dependencies": {
    "@imengyu/vue3-context-menu": "^1.3.8",
    "@rschedule/core": "^1.5.0",
    "@rschedule/standard-date-adapter": "^1.5.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "bootstrap-icons": "^1.11.3",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.6.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "i18next-vue": "^5.2.0",
    "pinia": "^2.1.7",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.2",
    "autoprefixer": "^10.4.16",
    "daisyui": "^4.5.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.10"
  }
}
